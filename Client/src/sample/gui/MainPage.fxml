<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="480.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.ControllerMainPage">
    <children>
        <ListView fx:id="promList" layoutX="27.0" layoutY="68.0" onMouseClicked="#handleMouseClickProm"
                  prefHeight="293.0" prefWidth="292.0"/>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="65.0" layoutY="14.0" prefHeight="47.0"
               prefWidth="216.0" text="Promemoria" textAlignment="CENTER">
            <font>
                <Font size="32.0"/>
            </font>
        </Label>
        <ListView fx:id="appList" layoutX="398.0" layoutY="68.0" onMouseClicked="#handleMouseClickApp"
                  prefHeight="293.0" prefWidth="292.0"/>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="436.0" layoutY="14.0" prefHeight="47.0"
               prefWidth="216.0" text="Appuntamenti" textAlignment="CENTER">
            <font>
                <Font size="32.0"/>
            </font>
        </Label>
        <Button fx:id="addProm" layoutX="27.0" layoutY="370.0" maxHeight="37.0" maxWidth="292.0" mnemonicParsing="false"
                onAction="#aggiungiProm" prefHeight="37.0" prefWidth="292.0" text="Aggiungi Promemoria">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>
        <Button fx:id="addApp" layoutX="398.0" layoutY="370.0" maxHeight="37.0" maxWidth="292.0" mnemonicParsing="false"
                onAction="#aggiungiApp" prefHeight="37.0" prefWidth="292.0" text="Aggiungi Appuntamento">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>
        <Button layoutX="27.0" layoutY="421.0" mnemonicParsing="false" onAction="#openProfile" prefHeight="37.0"
                prefWidth="664.0" text="Profile"/>
    </children>
</AnchorPane>
